rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read documents in the 'quizzes' collection
    match /quizzes/{quizId} {
      allow read: if true;
      // Disallow all writes (create, update, delete) from clients
      allow write: if false; 
    }

    // Explicitly deny all access to other parts of your database by default
    // This is a safety measure so nothing else can be read/written by accident.
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}